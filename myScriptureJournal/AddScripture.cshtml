@{

    Validation.RequireField("book", "You must enter a book");
    Validation.RequireField("chapter", "Chapter is required");
    Validation.RequireField("verse", "Verse is required");
    Validation.RequireField("note", "You haven't entered a note");

    var book = "";
    var chapter = "";
    var verse = "";
    var note = "";
    var date = System.DateTime.Now.ToString();

    if (IsPost && Validation.IsValid())
    {
        book = Request.Form["book"];
        chapter = Request.Form["chapter"];
        verse = Request.Form["verse"];
        note = Request.Form["note"];

        var db = WebMatrix.Data.Database.Open("MyScriptureJournal");
        var insertCommand = "INSERT INTO Scriptures (Book, Chapter, Verse, Note, Date) Values(@0, @1, @2, @3, @4)";
        db.Execute(insertCommand, book, chapter, verse, note, date);
        Response.Redirect("~/ViewAll");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Scripture</title>
    <style type="text/css">
        .field-validation-error {
            font-weight: bold;
            color: red;
            background-color: yellow;
        }

        .validation-summary-errors {
            border: 2px dashed red;
            color: red;
            background-color: yellow;
            font-weight: bold;
            margin: 12px;
        }
    </style>
</head>
<body>
    <h1>Add a Scripture</h1>
    @Html.ValidationSummary()
    <p><a href="~/ViewAll">Return to scripture listing</a></p>
    <form method="post">
        <fieldset>
            <legend>Scripture Information</legend>
            <p>
                <label for="book">Book:</label>
                <input id="book" type="text" name="book" value="@Request.Form["book"]" />
                @Html.ValidationMessage("book")
            </p>

            <p>
                <label for="chapter">Chapter:</label>
                <input id="chapter" type="text" name="chapter" value="@Request.Form["chapter"]" />
                @Html.ValidationMessage("chapter")
            </p>

            <p>
                <label for="verse">Verse:</label>
                <input id="verse" type="text" name="verse" value="@Request.Form["verse"]" />
                @Html.ValidationMessage("verse")
            </p>

            <p>
                <label for="note">Note:</label>
                <input id="note" type="text" name="note" value="@Request.Form["note"]" />
                @Html.ValidationMessage("note")
            </p>

            <p><input type="submit" name="buttonSubmit" value="Add Scripture" /></p>
        </fieldset>
    </form>
</body>
</html>
